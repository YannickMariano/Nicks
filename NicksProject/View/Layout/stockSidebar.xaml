<UserControl x:Class="NicksProject.View.Layout.stockSidebar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="260">

    <!-- Scroll activé pour petits écrans -->
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <DockPanel Background="Black" LastChildFill="True">

            <!-- SECTION DU BAS : Préférences et Déconnexion -->
            <StackPanel DockPanel.Dock="Bottom" Margin="0,10,0,10">
                <TextBox Text="PREFERENCE" IsEnabled="False"
                         Margin="20,0" Background="Black" Foreground="White"
                         BorderBrush="Black" FontSize="16" FontFamily="Times New Roman" />


                <Button Width="Auto" Height="62" Background="Transparent" BorderThickness="0" Margin="10,0,10,10">
                    <StackPanel Orientation="Horizontal" Margin="10,0">
                        <Image Source="/Ressource/logout.png" Width="31" Height="31" Margin="0,0,13,0"/>
                        <TextBlock Margin="0,8,0,0" Text="Déconnexion" FontSize="17" Foreground="White" FontFamily="Times New Roman"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- CONTENU PRINCIPAL EN HAUT -->
            <StackPanel DockPanel.Dock="Top">
                <!-- LOGO -->
                <Image Source="/Ressource/logo.png"
                       Width="223" Height="134"
                       Margin="0,0,0,10" />

                <!-- EMPLOYES -->
                <TextBox Text="EMPLOYES" IsEnabled="False"
                         Margin="20,5" Background="Black" Foreground="White"
                         BorderBrush="Black" FontSize="17"
                         FontFamily="Times New Roman" />

                <Border CornerRadius="10" Background="White" Height="62" Margin="20,15">
                    <Button Width="Auto" Height="62" Background="Transparent" BorderThickness="0" Click="Button_Click">
                        <StackPanel Orientation="Horizontal" Margin="10,0">
                            <Image Source="/Ressource/employe.png" Width="31" Height="31" Margin="0,0,10,0"/>
                            <TextBlock Text="Employés" FontSize="16" VerticalAlignment="Center" Foreground="Black" FontFamily="Times New Roman"/>
                        </StackPanel>
                    </Button>
                </Border>

                <!-- STOCK -->
                <TextBox Text="STOCKS" IsEnabled="False"
                         Margin="20,40,20,5" Background="Black" Foreground="White"
                         BorderBrush="Black" FontSize="16" FontFamily="Times New Roman"/>

                <!-- Boutons Stock -->
                <Border CornerRadius="10" Background="White" Height="62" Margin="20,15">
                    <Button Width="Auto" Height="62" Background="Transparent" BorderThickness="0" Name="btn_dashboard" Click="btn_dashboard_Click">
                        <StackPanel Orientation="Horizontal" Margin="10,0">
                            <Image Source="/Ressource/dashboard.png" Width="20" Height="20" Margin="0,0,15,0"/>
                            <TextBlock Text="Tableau de bord" FontSize="17" VerticalAlignment="Center" Foreground="Black" FontFamily="Times New Roman"/>
                        </StackPanel>
                    </Button>
                </Border>

                <Border CornerRadius="10" Background="White" Height="62" Margin="20,15">
                    <Button Width="Auto" Height="62" Background="Transparent" BorderThickness="0">
                        <StackPanel Orientation="Horizontal" Margin="10,0">
                            <Image Source="/Ressource/inventaire.png" Width="20" Height="20" Margin="10,0,13,0"/>
                            <TextBlock Text="Matières premières" FontSize="17" VerticalAlignment="Center" Foreground="Black" FontFamily="Times New Roman"/>
                        </StackPanel>
                    </Button>
                </Border>

                <Border CornerRadius="10" Background="White" Height="62" Margin="20,20">
                    <Button Width="Auto" Height="62" Background="Transparent" BorderThickness="0">
                        <StackPanel Orientation="Horizontal" Margin="10,0">
                            <Image Source="/Ressource/entrer.png" Width="20" Height="20" Margin="0,0,13,0"/>
                            <TextBlock Text="Entrées de stock" FontSize="17" VerticalAlignment="Center" Foreground="Black" FontFamily="Times New Roman"/>
                        </StackPanel>
                    </Button>
                </Border>

                <Border CornerRadius="10" Background="White" Height="62" Margin="20,20">
                    <Button Width="Auto" Height="62" Background="Transparent" BorderThickness="0">
                        <StackPanel Orientation="Horizontal" Margin="10,0">
                            <Image Source="/Ressource/sortie.png" Width="20" Height="20" Margin="0,0,13,0"/>
                            <TextBlock Text="Sorties de stock" FontSize="17" VerticalAlignment="Center" Foreground="Black" FontFamily="Times New Roman"/>
                        </StackPanel>
                    </Button>
                </Border>
            </StackPanel>

        </DockPanel>
    </ScrollViewer>
</UserControl>
