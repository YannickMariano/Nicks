<Window x:Class="NicksProject.View.Employe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NicksProject.View"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="Employe" Height="450" Width="800">
    <Grid Margin="9,0,-9,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="108*"/>
            <RowDefinition Height="109*"/>
        </Grid.RowDefinitions>
        <Label Content="Gestion Employe" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="102"/>
        <Label Content="Id Employe" HorizontalAlignment="Left" Margin="38,47,0,0" VerticalAlignment="Top"/>
        <Label Content="Nom" HorizontalAlignment="Left" Margin="70,80,0,0" VerticalAlignment="Top"/>
        <Label Content="Prenom" HorizontalAlignment="Left" Margin="55,114,0,0" VerticalAlignment="Top"/>
        <Label Content="Adresse" HorizontalAlignment="Left" Margin="55,151,0,0" VerticalAlignment="Top"/>
        <Label Content="NumTel" HorizontalAlignment="Left" Margin="50,185,0,0" VerticalAlignment="Top"/>
        <Label Content="Mot de Passe" Name="LabelMdp" HorizontalAlignment="Left" Margin="19,87,0,0" VerticalAlignment="Top" Grid.Row="1" Visibility="Hidden"/>
        <Label Content="Statut" HorizontalAlignment="Left" Margin="55,6,0,0" VerticalAlignment="Top" Grid.Row="1"/>
        <Label Content="Identifiant" Name="LabelIdentifiant" HorizontalAlignment="Left" Margin="36,52,0,0" VerticalAlignment="Top" Grid.Row="1" Visibility="Hidden"/>
        <TextBox x:Name="id_emp" HorizontalAlignment="Left" Margin="123,50,0,0" TextWrapping="Wrap" Text="Auto" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
        <TextBox x:Name="nom" HorizontalAlignment="Left" Margin="122,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="prenom" HorizontalAlignment="Left" Margin="122,118,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="adresse" HorizontalAlignment="Left" Margin="122,155,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="num_tel" HorizontalAlignment="Left" Margin="124,187,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="mdp" HorizontalAlignment="Left" Margin="123,91,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Row="1" Visibility="Hidden"/>
        <TextBox x:Name="identifiant" HorizontalAlignment="Left" Margin="124,56,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Row="1" Visibility="Hidden"/>
        <ComboBox x:Name="statut" Width="120" Margin="122,216,558,0" Height="39" VerticalAlignment="Top" SelectedIndex="0" SelectionChanged="Statut_SelectionChanged" Grid.RowSpan="2">
            <ComboBoxItem Content="Employe"/>
            <ComboBoxItem Content="Caissier"/>
        </ComboBox>
        <DataGrid x:Name="MonTableau"
          AutoGenerateColumns="True"
          Margin="260,50,21,111" Grid.RowSpan="2" SelectionChanged="MonTableau_SelectionChanged">

        </DataGrid>
        <Button x:Name="AjouterEmploye" Content="Ajouter" HorizontalAlignment="Left" Margin="41,136,0,0" Grid.Row="1" VerticalAlignment="Top" Height="25" Width="60" Click="AjouterEmploye_Click"/>
        <Button x:Name="SupprimerEmp" Content="Supprimer" HorizontalAlignment="Left" Margin="678,134,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Click="SupprimerEmp_Click"/>
        <Button x:Name="ModifierEmp" Content="Modifier" HorizontalAlignment="Left" Margin="176,139,0,0" Grid.Row="1" VerticalAlignment="Top" Height="22" Width="66" Click="ModifierEmp_Click"/>

    </Grid>
</Window>
