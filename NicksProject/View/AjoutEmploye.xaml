<Window x:Class="NicksProject.View.AjoutEmploye"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Créer un employé" Height="500" Width="800"
        Background="Black" Opacity="0.96">

    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Logo centré -->
            <Image Source="/Ressource/logoNicks.png"
           Height="70" Width="150" Stretch="Uniform"
           HorizontalAlignment="Left"
           Grid.Row="0" Margin="0,0,0,0"/>

            <!-- Titre centré -->
            <TextBlock Text="Créer un employé"
               FontSize="24"
               Foreground="White"
               FontWeight="SemiBold"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               Grid.Row="1"/>
        </Grid>



        <!-- Formulaire -->
        <Grid Grid.Row="1" Margin="30,20,30,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Nom -->
            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,30,20">
                <TextBlock Text="Nom" Foreground="White" FontSize="16" Margin="0,0,0,15"/>
                <Border CornerRadius="8" Background="White">
                    <TextBox x:Name="txtNomEmploye" Background="Transparent" BorderThickness="0" Padding="8" Height="50"/>
                </Border>
            </StackPanel>

            <!-- Prénom -->
            <StackPanel Grid.Row="0" Grid.Column="1" Margin="30,0,0,20">
                <TextBlock Text="Prénom" Foreground="White" FontSize="16" Margin="0,0,0,15"/>
                <Border CornerRadius="8" Background="White">
                    <TextBox x:Name="txtPrenomEmploye" Background="Transparent" BorderThickness="0" Padding="8" Height="50"/>
                </Border>
            </StackPanel>

            <!-- Adresse -->
            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,15,30,0">
                <TextBlock Text="Adresse" Foreground="White" FontSize="16" Margin="0,0,0,15"/>
                <Border CornerRadius="8" Background="White">
                    <TextBox x:Name="txtAdresseEmploye" Background="Transparent" BorderThickness="0" Padding="8" Height="50"/>
                </Border>
            </StackPanel>

            <!-- Téléphone -->
            <StackPanel Grid.Row="1" Grid.Column="1" Margin="30,15,0,0">
                <TextBlock Text="Téléphone" Foreground="White" FontSize="16" Margin="0,0,0,15"/>
                <Border CornerRadius="8" Background="White">
                    <TextBox x:Name="txtTelephoneEmploye" Background="Transparent" BorderThickness="0" Padding="8" Height="50"/>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Boutons -->
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,0,0" RenderTransformOrigin="0.5,0.5">
            <StackPanel.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="-0.173"/>
                    <RotateTransform/>
                    <TranslateTransform Y="-1.205"/>
                </TransformGroup>
            </StackPanel.RenderTransform>
            <Grid Width="754">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Bouton Annuler -->
                <Button x:Name="AnnulerAjoutEmploye" Grid.Column="1"
                 Content="Annuler"
                 Height="50"
                        FontSize="16"
                 Margin="0,270,200,0"
                 Background="#D9D9D9"
                 Foreground="Black"
                 BorderThickness="0"
                 FontWeight="SemiBold"
                 Cursor="Hand"
                         Width="180" Click="AnnulerAjoutEmploye_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                <ContentPresenter HorizontalAlignment="Center"
                           VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Bouton Enregistrer -->
                <Button x:Name="AoutEmploye" Grid.Column="1"
                 Content="Enregistrer"
                        FontSize="16"
                 Height="50"
                 Margin="200,270,0,0"
                 Background="#E94E1B"
                 Foreground="Black"
                 BorderThickness="0"
                 FontWeight="SemiBold"
                 Width="180"
                 Cursor="Hand" Click="AoutEmploye_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                <ContentPresenter HorizontalAlignment="Center"
                           VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

        </StackPanel>



    </Grid>
</Window>
