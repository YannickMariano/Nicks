<Window x:Class="Nick_sProject.View.dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:Nick_sProject.View"
        xmlns:model="clr-namespace:Nick_sProject.Model"
        mc:Ignorable="d"
        Title="Gestion des Employés"
        MinWidth="1440"
        MinHeight="1024"
        Opacity="1"
        WindowStartupLocation="Manual"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        AllowsTransparency="False"
        Background="White">

    <Window.Resources>

        <model:RoleToBackgroundConverter x:Key="RoleToBackgroundConverter" />
        <model:RoleToForegroundConverter x:Key="RoleToForegroundConverter" />


        <!-- Style TextBox avec placeholder -->
        <Style TargetType="TextBox" x:Key="PlaceholderTextBoxStyle">
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                            <Grid>
                                <!-- Placeholder -->
                                <TextBlock Text="{TemplateBinding Tag}"
                                       Foreground="Gray"
                                       Margin="5,14,0,0"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False"
                                       Visibility="Collapsed"
                                       x:Name="Placeholder"/>
                                <!-- Input content -->
                                <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="5,14,0,0"
                                          VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="Text" Value="{x:Null}">
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style checkbox arrondi -->
        <Style x:Key="RoundedRectCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid Width="20" Height="20">
                            <Border x:Name="Border"
                                BorderBrush="Black"
                                BorderThickness="1"
                                Background="White"
                                CornerRadius="4"
                                Width="20"
                                Height="20"/>
                            <Path x:Name="CheckMark"
                              Visibility="Collapsed"
                              Data="M 4 10 L 8 14 L 16 6"
                              Stroke="Black"
                              StrokeThickness="2"
                              StrokeEndLineCap="Round"
                              StrokeStartLineCap="Round" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style no border cellule -->
        <Style x:Key="NoCellBorderStyle" TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <ContentPresenter />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        
    </Window.Resources>

    <Grid>
        <Border CornerRadius="25" Background="White" SnapsToDevicePixels="True" Width="1440" Height="1024">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.25*" />
                    <ColumnDefinition Width="0.75*" />
                </Grid.ColumnDefinitions>

                <!-- COLONNE DE GAUCHE EN NOIR -->
                <StackPanel x:Name="colonne_gauche" Grid.Column="0" Background="Black">

                    <!-- Nicks logo -->
                    <Image x:Name="Logo" Source="/Ressource/logo.png"
                               Width="223"
                               Height="134"
                               RenderTransformOrigin="0.5,0.5"
                               Opacity="1"
                               HorizontalAlignment="Left"
                               Margin="10,0,20,7">
                        <Image.RenderTransform>
                            <RotateTransform Angle="0" />
                        </Image.RenderTransform>
                    </Image>

                    <!-- Gérer +  btn employés -->
                    <TextBox x:Name="EMPLOYES" Height="19" Text="EMPLOYES" Width="auto" IsEnabled="False" TextWrapping="Wrap" BorderBrush="Black" Background="Black" Foreground="White" FontFamily="Times New Roman" FontSize="16" Margin="50,5,5,5"/>
                    <Border x:Name="EmployesBorder" CornerRadius="10" Background="White" Height="62" Margin="0,15,0,70" Width="239">
                        <Button x:Name="EmployesButton" Width="239" Height="62" Background="{x:Null}" BorderThickness="0" Margin="0,0,0,0" VerticalAlignment="Center" Click="Button_Click">
                            <StackPanel Orientation="Horizontal" Width="NaN" Margin="-85,0,0,0">
                                <Image x:Name="employe_img" Source="/Ressource/employe.png"
                                   Width="31" Height="31"
                                   Margin="0,0,13,0" HorizontalAlignment="Left" />
                                <TextBlock x:Name="EmployesText" Text="Employés"
                                   FontSize="16"
                                   VerticalAlignment="Center"
                                   Foreground="Black" FontFamily="Times New Roman" />
                            </StackPanel>
                        </Button>
                    </Border>

                    <!-- Stock + Boutons -->
                    <TextBox x:Name="STOCK" Height="19" Text="STOCKS" Width="auto" IsEnabled="False" TextWrapping="Wrap" BorderBrush="Black" Background="Black" Foreground="White" FontFamily="Times New Roman" FontSize="16" BorderThickness="0,0,0,0" Margin="50,5,5,5"/>
                    <!-- Btn : tableau de bord -->
                    <Border x:Name="TableauBordBorder" CornerRadius="10" Background="White" Height="62" Margin="0,15,0,30" Width="239">
                        <Button x:Name="tableau_bord" Width="239" Height="62" Background="{x:Null}" BorderThickness="0" Margin="0,0,0,0" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal" Width="NaN" Margin="-85,0,0,0" >
                                <Image x:Name="tableau_bord_img" Source="/Ressource/tableau_bord.png"
                                   Width="20" Height="20"
                                   Margin="20,0,13,0" HorizontalAlignment="Left" />
                                <TextBlock x:Name="TableauBordText" Text="Tableau de bord"
                                   FontSize="16"
                                   VerticalAlignment="Center"
                                   Foreground="Black" FontFamily="Times New Roman" />
                            </StackPanel>
                        </Button>
                    </Border>
                    <!-- Btn : matières premières -->
                    <Border x:Name="MatiereBorder" CornerRadius="10" Background="White" Height="62" Margin="0,15,0,30" Width="239">
                        <Button x:Name="matiere_premiere" Width="239" Height="62" Background="{x:Null}" BorderThickness="0" Margin="0,0,0,0" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal" Width="NaN" Margin="-85,0,0,0">
                                <Image x:Name="matiere_premiere_img" Source="/Ressource/matiere_premiere.png"
                                       Width="20" Height="20"
                                       Margin="43,0,13,0" HorizontalAlignment="Left" />
                                <TextBlock x:Name="MatiereText" Text="Matières premières"
                                           FontSize="16"
                                           VerticalAlignment="Center"
                                           Foreground="Black" FontFamily="Times New Roman" />
                            </StackPanel>
                        </Button>
                    </Border>
                    <!-- Btn : entrée de stock -->
                    <Border x:Name="EntreeBorder" CornerRadius="10" Background="White" Height="62" Margin="0,15,0,30" Width="239">
                        <Button x:Name="entree_stock" Width="239" Height="62" Background="{x:Null}" BorderThickness="0" Margin="0,0,0,0" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal" Width="NaN" Margin="-85,0,0,0">
                                <Image x:Name="entree_stock_img" Source="/Ressource/entree_stock.png"
                                       Width="20" Height="20"
                                       Margin="30,0,13,0" HorizontalAlignment="Left" />
                                <TextBlock x:Name="EntreeText" Text="Entrées de stock"
                                           FontSize="16"
                                           VerticalAlignment="Center"
                                           Foreground="Black" FontFamily="Times New Roman" />
                            </StackPanel>
                        </Button>
                    </Border>
                    <!-- Btn : sortie de stock -->
                    <Border x:Name="SortieBorder" CornerRadius="10" Background="White" Height="62" Margin="0,15,0,70" Width="239">
                        <Button x:Name="sortie_stock" Width="239" Height="62" Background="{x:Null}" BorderThickness="0" Margin="0,0,0,0" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal" Width="NaN" Margin="-85,0,0,0">
                                <Image x:Name="sortie_stock_img" Source="/Ressource/sortie_stock.png"
                                       Width="20" Height="20"
                                       Margin="30,0,13,0" HorizontalAlignment="Left" />
                                <TextBlock x:Name="SortieText" Text="Sorties de stock"
                                           FontSize="16"
                                           VerticalAlignment="Center"
                                           Foreground="Black" FontFamily="Times New Roman" />
                            </StackPanel>
                        </Button>
                    </Border>
                    
                    <!-- Préférence + btn paramètres -->
                    <TextBox x:Name="PREFERENCE" Height="19" Text="PREFERENCE" Width="auto" IsEnabled="False" TextWrapping="Wrap" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="White" FontFamily="Times New Roman" FontSize="16" Margin="50,5,5,5" BorderThickness="0,0,0,0"/>
                    <Button x:Name="BtnParametres"
                                Width="239"
                                Height="62"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                                HorizontalAlignment="Left"
                                Margin="60,5,5,0">
                        <!-- Click="BtnParametres_Click -->
                        <StackPanel Orientation="Horizontal" Margin="-80,0,0,0">
                            <Image Source="/Ressource/parametre.png"
                                       Width="31"
                                       Height="31"
                                       Margin="0,0,13,0"
                                       VerticalAlignment="Center" />
                            <TextBlock Text="Paramètres"
                                           VerticalAlignment="Center"
                                           FontSize="16"
                                           FontFamily="Times New Roman"
                                           Foreground="White" Margin="3,0,0,0" />
                        </StackPanel>
                    </Button>

                    <!-- Déconnexion -->
                    <Button x:Name="BtnDeconnexion"
                                Width="239"
                                Height="62"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                                HorizontalAlignment="Left"
                                Margin="60,0,5,5">
                        <!-- Click="BtnDeconnexion_Click -->
                        <StackPanel Orientation="Horizontal" Margin="-70,0,0,0" >
                            <Image Source="/Ressource/logout.png"
                                   Width="31"
                                   Height="31"
                                   Margin="0,0,13,0"
                                   VerticalAlignment="Center" />
                            <TextBlock Text="Déconnexion"
                                   VerticalAlignment="Center"
                                   FontSize="16"
                                   FontFamily="Times New Roman"
                                   Foreground="White" Margin="3,0,0,0" />
                        </StackPanel>
                    </Button>
                </StackPanel>

                
                
                <!-- COLONNE DE DROITE EN BLANC -->
                <Border Grid.Column="1"
                        Background="White"
                        Opacity="1"
                        Padding="0,0,0,0"
                        HorizontalAlignment="Left">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="111"/>
                            <!-- Ligne 0: utilisateur -->
                            <RowDefinition Height="Auto"/>
                            <!-- Ligne 1: titre -->
                            <RowDefinition Height="Auto"/>
                            <!-- Ligne 2: recherche -->
                            <RowDefinition Height="Auto"/>
                            <!-- Ligne 3: tableau -->
                            <RowDefinition Height="Auto"/>
                            <!-- Ligne 4: pagination -->
                        </Grid.RowDefinitions>


                        <!-- LIGNE 0 : Titre + Informations utilisateur connecté -->
                        <Border Grid.Row="0" Background="Black" Padding="20">
                            <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="50,0,30,0">
                                
                                <!-- Titre à gauche -->
                                <TextBlock Text="Gestion des employés"
                                           FontSize="40"
                                           FontWeight="Bold"
                                           Foreground="#EA4A10"
                                           FontFamily="Times New Roman"
                                           DockPanel.Dock="Left"
                                           VerticalAlignment="Center"/>

                                <!-- Informations utilisateur à droite -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" DockPanel.Dock="Right" Margin="0,0,10,0">
                                    <!-- Nom + rôle -->
                                    <StackPanel Orientation="Vertical" Margin="0,0,10,0" HorizontalAlignment="Left" VerticalAlignment="Center">
                                        <TextBlock Text="John Doe"
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   Foreground="White"
                                                   FontFamily="Times New Roman"
                                                   HorizontalAlignment="Right" />
                                        <TextBlock Text="Admin"
                                                   FontSize="14"
                                                   FontWeight="Normal"
                                                   Foreground="LightGray"
                                                   FontFamily="Times New Roman"
                                                   HorizontalAlignment="Right" />
                                    </StackPanel>
                                    <!-- Icône utilisateur -->
                                    <Ellipse Width="40" Height="40" Fill="#831414" VerticalAlignment="Center"></Ellipse>
                                </StackPanel>
                            </DockPanel>
                        </Border>


                        <!-- LIGNE 1 : Titre + Sous-titre -->
                        <StackPanel Grid.Row="1"
                                        Orientation="Vertical"
                                        Margin="72,30,0,20">
                            <!-- Titre -->
                            <TextBlock Text="Liste des employés"
                                           FontSize="24"
                                           Foreground="Black"
                                           FontFamily="Times New Roman" FontWeight="Bold" />
                            <!-- Sous-titre -->
                            <TextBlock Text="Gérer les utilisateurs et leurs rôles ici"
                                           FontSize="14"
                                           FontWeight="Normal"
                                           Foreground="Gray"
                                           Margin="0,5,0,0"
                                           FontFamily="Times New Roman" />
                        </StackPanel>

                        <!-- LIGNE 2 : Titre + recherche + filtres + Ajouter -->
                        <Grid Grid.Row="2" Margin="72,20,60,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />          <!-- Colonne 0 : titre -->
                                <ColumnDefinition Width="Auto" />       <!-- Colonne 1 : recherche -->
                                <ColumnDefinition Width="Auto" />       <!-- Colonne 2 : filtre -->
                                <ColumnDefinition Width="Auto" />       <!-- Colonne 3 : bouton ajouter -->
                            </Grid.ColumnDefinitions>
                            
                            <!-- Colonne 0 : Titre + nombre d'employés -->
                            <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Center" Margin="0,0,0,0">
                                <TextBlock Text="Tous les employés"
                                               FontSize="20"
                                               FontWeight="Bold"
                                               Foreground="Black"
                                               FontFamily="Times New Roman" />
                                <TextBlock x:Name="TxtTotalEmployes"
                                               Text="44"
                                               FontSize="20"
                                               Foreground="Gray"
                                               FontFamily="Times New Roman"
                                               Margin="0,5,0,0" FontWeight="Bold"/>
                            </StackPanel>

                            <!-- Colonne 1 : Barre de recherche -->
                            <Border Grid.Column="1"
                                        Background="Transparent"
                                        CornerRadius="10"
                                        Width="306" Height="52"
                                        VerticalAlignment="Center"
                                        BorderThickness="1"
                                        BorderBrush="#000000"
                                        Margin="20,0,10,0">
                                <DockPanel LastChildFill="True">
                                    <Image Source="/Ressource/recherche.png"
                                               Width="31"
                                               Height="31"
                                               Margin="10,0"
                                               VerticalAlignment="Center" HorizontalAlignment="Center" />
                                    <TextBox Style="{StaticResource PlaceholderTextBoxStyle}"
                                             Tag="Rechercher"
                                             Text=""
                                             BorderThickness="0"
                                             Background="Transparent"
                                             VerticalAlignment="Center"
                                             Foreground="Black"
                                             FontSize="16"
                                             FontFamily="Times New Roman"
                                             Padding="0,0" />

                                </DockPanel>
                            </Border>

                            <!-- Colonne 2 : Bouton Filtre -->
                            <Border Grid.Column="2"
                                        Background="White"
                                        BorderBrush="Black"
                                        BorderThickness="1"
                                        CornerRadius="10"
                                        Margin="10,0,10,0"
                                        VerticalAlignment="Center">
                                <Button Background="Transparent"
                                            BorderThickness="0"
                                            Height="52"
                                            MinWidth="130"
                                            Padding="5,0"
                                            Cursor="Hand">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Image Source="/Ressource/filtre.png"
                                                   Width="25"
                                                   Height="25"
                                                   Margin="0,0,10,0"/>
                                        <TextBlock Text="Filtres"
                                                       FontSize="16"
                                                       FontFamily="Times New Roman"
                                                       VerticalAlignment="Center" FontWeight="Bold"/>
                                    </StackPanel>
                                </Button>
                            </Border>

                            <!-- Colonne 3 : Bouton Ajouter avec coins arrondis -->
                            <Border Grid.Column="3"
                                        Background="#EA4A10"
                                        CornerRadius="10"
                                        Margin="10,0,0,0"
                                        BorderThickness="1"
                                        VerticalAlignment="Center">
                                <Button Background="Transparent"
                                            BorderThickness="0"
                                            Foreground="White"
                                            Height="52"
                                            MinWidth="146"
                                            Cursor="Hand">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                                        <Image Source="/Ressource/ajouter.png"
                                                   Width="31"
                                                   Height="31"
                                                   Margin="0,0,8,0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                        <TextBlock Text="Ajouter"
                                                       FontSize="16"
                                                       FontFamily="Times New Roman"
                                                       VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </Border>
                        </Grid>

                        <!-- LIGNE 3 : Tableau -->
                        <DataGrid x:Name="UsersDataGrid"
                                      Grid.Row="3"
                                      Width="auto"
                                      GridLinesVisibility="Horizontal"
                                      HorizontalGridLinesBrush="#F0F0F0"
                                      FontFamily="Times New Roman"
                                      FontWeight="DemiBold"
                                      AutoGenerateColumns="False" 
                                      CanUserAddRows="False" 
                                      RowHeight="80" 
                                      HeadersVisibility="Column" 
                                      BorderThickness="0"
                                      Margin="72,10,60,10"
                                      CellStyle="{StaticResource NoCellBorderStyle}">

                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="BorderBrush" Value="#F0F0F0"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="FontSize" Value="16"/>
                                    <Setter Property="FontFamily" Value="Times New Roman"/>
                                    <Setter Property="Height" Value="50"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <DataGrid.Columns>
                                <!-- Colonne 0 : Checkbox + Nom + Numéro -->
                                <DataGridTemplateColumn Header="Nom complet" Width="2*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="5,0">
                                                <CheckBox Style="{StaticResource RoundedRectCheckBoxStyle}" VerticalAlignment="Center" Margin="5,0"/>
                                                <StackPanel Orientation="Vertical" Margin="10,0,0,0" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding NomComplet}" FontSize="14" TextWrapping="Wrap" Margin="0,0,0,5"/>
                                                    <TextBlock Text="{Binding Numero}" FontSize="14" Foreground="Gray"/>
                                                </StackPanel>

                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>


                                <!-- Colonne 1 : Rôle (ComboBox) -->
                                <DataGridTemplateColumn Header="Rôle" Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <ComboBox SelectedItem="{Binding Role}" Width="120" Margin="5,0" Padding="5" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                <ComboBox.Resources>
                                                    <Style TargetType="ComboBoxItem">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="ComboBoxItem">
                                                                    <Border CornerRadius="10"
                                                                            Padding="6,2"
                                                                            Margin="2"
                                                                            Background="{Binding Content, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource RoleToBackgroundConverter}}">
                                                                        <TextBlock Text="{TemplateBinding Content}"
                                                                                   FontSize="14"
                                                                                   FontWeight="SemiBold"
                                                                                   HorizontalAlignment="Center"
                                                                                   Foreground="{Binding Content, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource RoleToForegroundConverter}}"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </ComboBox.Resources>

                                                <ComboBoxItem Content="Serveur" />
                                                <ComboBoxItem Content="Caissier" />
                                            </ComboBox>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>





                                <!-- Colonne 2 : Dernière connexion -->
                                <DataGridTextColumn Header="Dernière connexion"
                                                        Width="1.5*"
                                                        Binding="{Binding DerniereConnexion}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="FontSize" Value="14"/>
                                            <Setter Property="FontFamily" Value="Times New Roman"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Colonne 3 : Adresse -->
                                <DataGridTextColumn Header="Adresse" Width="*" Binding="{Binding Adresse}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="Margin" Value="10,0,0,0"/>
                                            <Setter Property="FontSize" Value="14"/>
                                            <Setter Property="FontFamily" Value="Times New Roman"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Colonne 4 : Actions -->
                                <DataGridTemplateColumn Header="Actions" Width="1*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10">
                                                <!-- Modifier -->
                                                <Button ToolTip="Modifier"
                                                            Tag="{Binding}"
                                                            Width="32"
                                                            Height="32"
                                                            Margin="5,0"
                                                            Background="Transparent"
                                                            BorderBrush="{x:Null}"
                                                            BorderThickness="0"
                                                            Padding="0">
                                                    <Image Source="/Ressource/modifier.png"
                                                               Width="31"
                                                               Height="31"
                                                               Stretch="Uniform"
                                                               VerticalAlignment="Center"
                                                               HorizontalAlignment="Center" />
                                                </Button>
                                                <!-- Supprimer -->
                                                <Button ToolTip="Supprimer"
                                                            Tag="{Binding}"
                                                            Width="32"
                                                            Height="32"
                                                            Margin="5,0"
                                                            Background="Transparent"
                                                            BorderBrush="{x:Null}"
                                                            BorderThickness="0"
                                                            Padding="0">
                                                    <Image Source="/Ressource/supprimer.png"
                                                           Width="31"
                                                           Height="31"
                                                           Stretch="Uniform"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Center" />
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                            <!-- Fin du tableau -->
                        </DataGrid>
                        <!-- Fin de la ligne 3 -->

                        <!-- LIGNE 4 : Pagination -->
                        <StackPanel Grid.Row="4"
                                    x:Name="PaginationPanel"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Margin="72,10,60,20"
                                    Background="Transparent"
                                    Height="50"
                                    >
                        </StackPanel>


                    </Grid>
                </Border>
                <!-- FIN COLONNE DROITE EN BLANC -->

            </Grid>
        </Border>
    </Grid>
</Window>
