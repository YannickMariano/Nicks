<Window x:Class="Nick_sProject.View.ModifierEmploye"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modifier un employé" Height="821" Width="800"
        Background="Black" Opacity="0.96">

    <Grid Margin="20,0,20,0" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Logo centré -->
            <Image Source="/Ressource/logo.png"
           Height="70" Width="150" Stretch="Uniform"
           HorizontalAlignment="Left"
           Grid.Row="0" Margin="0,0,0,0"/>

            <!-- Titre centré -->
            <TextBlock Text="Modifier un employé"
               FontSize="24"
               Foreground="White"
               FontWeight="SemiBold"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               Grid.Row="1"/>
        </Grid>



        <!-- Formulaire -->
        <Grid Grid.Row="1" Margin="0,20,0,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Nom -->
            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,20,20">
                <TextBlock Text="Nom" Foreground="White" FontSize="16" Margin="0,0,0,15"/>
                <Border CornerRadius="8" Background="White">
                    <TextBox x:Name="txtNomEmploye" Background="Transparent" BorderThickness="0" Padding="8" Height="50"/>
                </Border>
            </StackPanel>

            <!-- Prénom -->
            <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,20">
                <TextBlock Text="Prénom" Foreground="White" FontSize="16" Margin="0,0,0,15"/>
                <Border CornerRadius="8" Background="White">
                    <TextBox x:Name="txtPrenomEmploye" Background="Transparent" BorderThickness="0" Padding="8" Height="50"/>
                </Border>
            </StackPanel>

            <!-- Adresse -->
            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,15,20,0">
                <TextBlock Text="Adresse" Foreground="White" FontSize="16" Margin="0,0,0,15"/>
                <Border CornerRadius="8" Background="White">
                    <TextBox x:Name="txtAdresseEmploye" Background="Transparent" BorderThickness="0" Padding="8" Height="50"/>
                </Border>
            </StackPanel>

            <!-- Téléphone -->
            <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,15,0,0">
                <TextBlock Text="Téléphone" Foreground="White" FontSize="16" Margin="0,0,0,15"/>
                <Border CornerRadius="8" Background="White">
                    <TextBox x:Name="txtTelEmploye" Background="Transparent" BorderThickness="0" Padding="8" Height="50"/>
                </Border>
            </StackPanel>

            <StackPanel Grid.Row="2" Grid.Column="0" Margin="-16,35,20,0">
                <TextBlock Text="Role" Foreground="White" FontSize="16" Margin="0,0,0,15" Width="334"/>
                <ComboBox x:Name="comboboxStatutEmploye" Width="337" Height="50" Margin="10" SelectionChanged="Role_Change" >
                    <ComboBoxItem>Employe</ComboBoxItem>
                    <ComboBoxItem>Caissier</ComboBoxItem>
                </ComboBox>
            </StackPanel>
        </Grid>

        <!-- Boutons -->
        <StackPanel Grid.Row="1" RenderTransformOrigin="0.484,0.642">
            <Grid Height="646" Width="744">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Bouton Annuler -->
                <Button
                 Content="Annuler"
                 Height="50"
                        FontSize="16"
                 Margin="369,564,195,32"
                 Background="#D9D9D9"
                 Foreground="Black"
                 BorderThickness="0"
                 FontWeight="SemiBold"
                 Cursor="Hand"
                         Width="180" Grid.ColumnSpan="2">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                <ContentPresenter HorizontalAlignment="Center"
                           VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Bouton Enregistrer -->
                <Button x:Name="button_modifier_employe" Grid.Column="1"
                 Content="Modifier"
                        FontSize="16"
                 Height="50"
                 Margin="182,564,10,32"
                 Background="#E94E1B"
                 Foreground="Black"
                 BorderThickness="0"
                 FontWeight="SemiBold"
                 Width="180"
                 Cursor="Hand" Click="button_modifier_employe_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                <ContentPresenter HorizontalAlignment="Center"
                           VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Label x:Name="labelEntrerNomEtMdp" Content="Entrer l'identifiant et Mot de Passe du Caissier" HorizontalAlignment="Left" Margin="0,393,0,0" VerticalAlignment="Top" Foreground="White" Height="37" Width="397" FontSize="18" Grid.ColumnSpan="2" Visibility="Hidden" />
                <Label x:Name="labelIdentifiant" Content="Identifiant" HorizontalAlignment="Left" Margin="2,435,0,0" VerticalAlignment="Top" Foreground="White" FontSize="14" Visibility="Hidden"/>
                <Label x:Name="labelMdp" Grid.Column="1" Content="Mot de Passe" HorizontalAlignment="Left" Margin="0,435,0,0" VerticalAlignment="Top" FontSize="14" Foreground="White" Visibility="Hidden"/>
                <TextBox x:Name="txtMdp" Grid.Column="1" HorizontalAlignment="Center" Margin="0,469,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="372" Height="52" Foreground="Black" FontSize="14" Visibility="Hidden"/>
                <TextBox x:Name="txtIdentifiant" HorizontalAlignment="Left" Margin="0,469,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="362" Height="52" FontSize="14" Visibility="Hidden"/>
            </Grid>

        </StackPanel>



    </Grid>
</Window>
