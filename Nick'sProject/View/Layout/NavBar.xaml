<UserControl x:Class="Nick_sProject.View.Layout.NavBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="60">
    <Border Background="Black" Padding="20,0">
        <Grid Height="60">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- Colonne logo -->
                <ColumnDefinition Width="*"/>
                <!-- Colonne titre -->
                <ColumnDefinition Width="Auto"/>
                <!-- Colonne utilisateur -->
            </Grid.ColumnDefinitions>

            <!-- Logo -->
            <Image Source="/Ressource/logoNicks.png"
                   Height="40" VerticalAlignment="Center"
                   Margin="10,0" Grid.Column="0"/>

            <!-- Titre -->
            <TextBlock Text="Gestion des employés"
                       FontSize="26" FontWeight="Bold"
                       Foreground="#EA4A10"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Grid.Column="1"/>

            <!-- Utilisateur -->
            <StackPanel Orientation="Horizontal"
                        Grid.Column="2"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        Margin="0,0,10,0">
                <StackPanel Orientation="Vertical" Margin="0,0,10,0" VerticalAlignment="Center">
                    <TextBlock Text="John Doe" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Admin" Foreground="LightGray" FontSize="12"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
